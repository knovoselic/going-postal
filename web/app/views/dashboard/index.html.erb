<% if @events.empty? %>
  <div class="alert alert-info fade in text-center">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    There are no events assoaciated with your account.
  </div>
<% else %>
<h1>Overview</h1>
  <div class="group panel-default" style="border-left-color: #1b809e;">
    <div class="panel-heading">
      <h4><b>Last <%= @events.count %> events</b></h4>
    </div>
    <div class="panel-body">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Location</th>
            <th>Timestamp</th>
            <th>Event type</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'event_row', collection: @events, as: :event %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
